# Docker Compose Override Example
# Copy this file to docker-compose.override.yml to customize settings
# This file is automatically merged with docker-compose.yml

version: '3.8'

services:
  python-etl:
    # Override environment variables
    environment:
      - PYTHONPATH=/app
      - DATA_DIR=/app/data
      - LOG_LEVEL=DEBUG
      - MAX_WORKERS=4

    # Override resource limits
    deploy:
      resources:
        limits:
          cpus: '4'
          memory: 8G
        reservations:
          cpus: '2'
          memory: 4G

  vector-api:
    # Override API settings
    environment:
      - FLASK_ENV=production
      - FLASK_DEBUG=0
      - API_RATE_LIMIT=1000

    # Add healthcheck
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  r-api:
    # Override R API settings
    environment:
      - R_LIBS=/usr/local/lib/R/site-library
      - DATA_DIR=/app/data
      - PLUMBER_PORT=8001
